<link rel='stylesheet' href='/stylesheets/bootstrap.min.css'>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style type="text/css">
.center-table
{
  margin: 0 auto !important;
  float: none !important;
}
.table td{
  text-align: center;
}
.table th{
  text-align: center;
}
#exp_table tr td{
  text-align: center;
}
tr td th{
  text-align: center;
}
.popover-title{
  text-align: center;
}
.popover-content{
  text-align: center;
}
</style>
<title>P&D Calculator</title>
</head>
<body>
<div class="container">
<div class="row">
<div class="span4">
<form method="post" action="/exp">
<h1> P&D Calculator</h1>
<h4>몬스터 번호를 입력하세요.</h4>
<input type="text" class="input-large search-query" name="no" id='no'>
<button type="submit" class="btn btn-honey-pot-1">검색</button>
<% if(result){ %>
<h4>몬스터 정보</h4>
    <table class="table table-striped span4 center-table">
        <tr>
	    <th>no.</th>
	    <th>몬스터명</th>
	    <th>경험치타입</th>
	</tr>
	<tr>
	    <td><%= result.no %></td>
	    <td><%= result.name %></td>
	    <td><%= result.type %>만</td>
	</tr>
    </table>
    <h4>몬스터 경험치  (<%= result.type %>만)</h4>
    <table id="exp_table" class="table table-striped span4 center-table">
                <tr>
                        <th>레벨</th>
                        <th>경험치</th>
                </tr>
  <% for(var i = 0; i < result.exp.length; i++){ %>
                <tr id="exp" data-content="<%= result.exp[result.exp.length-1]-result.exp[i] %>" >
                        <td><%= i+1 %></td>
                        <td><%= result.exp[i] %></td>
                </tr>
  <% } %>
        </table>
    </div>
</div>
  <% } %>

