<script>  
$(function ()  
{
    function hidePopovers(){
	$(function(){
		$("#exp_table tr").popover('hide');
        });
    }
    $("#exp_table tr").popover({trigger:'manual', html:true, title:'최대레벨까지 필요한 경험치', placement:'top'});  
    $("#exp_table tr").click(function() { hidePopovers(); $(this).popover('show')});
});  
</script>  

