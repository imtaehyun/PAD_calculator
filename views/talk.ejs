<title>퍼즐앤드래곤 Talk! Talk! Talk!</title>
<script type="text/javascript">
function frmChk() {
	var form = document.pad_talk;
	var frm_name = form.name.value;
	var frm_comment = form.comment.value;
	
	// form 내용 검사
	if (frm_comment == '') {
		alert('아무런 의견도 없으시다구요? 그럼 버튼을 누르실 필요는 없잖아요!! ㅠㅠ');
		form.comment.value = '';
		form.comment.focus();
		return false;
	}
	form.submit();
}
</script>
